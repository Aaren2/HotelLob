<Window x:Class="HotelLob.Windows.AddUpdRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelLob.Windows"
        mc:Ignorable="d"
        Title="AddUpdRoomWindow" WindowStartupLocation="CenterScreen" Height="600" Width="400">
    <Grid >
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Добавить комнату" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 50 0 0"/>

            <TextBlock Text="Выбирите тип комнаты" FontSize="14" Margin="0 20 0 0"/>
            <ComboBox x:Name="CmbTypeRoom" FontSize="14" Margin="0 5 0 0"/>
            <Button x:Name="BtnLogin" Content="Добавить" FontSize="14" Margin="0 20 0 0" Click="BtnLogin_Click"/>
            <TextBlock Text="Вернутся" FontSize="10" Foreground="Blue" HorizontalAlignment="Center" Margin="0 10 0 50" MouseLeftButtonUp="TextBlock_MouseLeftButtonUp"/>
        </StackPanel>
    </Grid>
</Window>