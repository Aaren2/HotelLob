<Window x:Class="HotelLob.Windows.AddUpdEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelLob.Windows"
        mc:Ignorable="d"
        Title="AddUpdEmployeeWindow" WindowStartupLocation="CenterScreen" Height="730"  Width="400">
    <Grid Background="#FFBD8D71">
        <Grid.RowDefinitions>
            <RowDefinition Height="580"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Добавить сотрудника" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top"  Margin="0,80,0,0">

            <TextBlock Text="Ведите имя" FontSize="14" Margin="0 5 0 0"/>
            <TextBox x:Name="TbFirstName" FontSize="14" Margin="0 5 0 0"/>
            <TextBlock Text="Ведите фамилию" FontSize="14" Margin="0 20 0 0"/>
            <TextBox x:Name="TbLastName" FontSize="14" Margin="0 5 0 0"/>
            <TextBlock Text="Ведите отчество" FontSize="14" Margin="0 20 0 0"/>
            <TextBox x:Name="TbMidlleName" FontSize="14" Margin="0 5 0 0"/>
            <TextBlock Text="Ведите номер телефона" FontSize="14" Margin="0 20 0 0"/>
            <TextBox x:Name="TbPhone" FontSize="14" Margin="0 5 0 0"/>
            <TextBlock Text="Ведите почту" FontSize="14" Margin="0 20 0 0"/>
            <TextBox x:Name="TbEmail" FontSize="14" Margin="0 5 0 0"/>

            <TextBlock Text="Ведите код паспорта" FontSize="14" Margin="0 20 0 0"/>
            <TextBox x:Name="TbPassportCode" FontSize="14" Margin="0 5 0 0"/>
            <TextBlock Text="Ведите серию паспорта" FontSize="14" Margin="0 20 0 0"/>
            <TextBox x:Name="TbPassportSeries" FontSize="14" Margin="0 5 0 0"/>
            <TextBlock Text="Ведите зарплату" FontSize="14" Margin="0 20 0 0"/>
            <TextBox x:Name="TbSalary" FontSize="14" Margin="0 5 0 0"/>
        </StackPanel>
        <StackPanel Margin="0,100,0,0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top">


            <TextBlock Text="Ведите день рождения" FontSize="14" Margin="0 10 0 0"/>
            <DatePicker x:Name="DPB" FontSize="14" Margin="0 5 0 0"/>
            <TextBlock Text="Выберите пол" FontSize="14" Margin="0 20 0 0"/>
            <ComboBox x:Name="CmbGender"  FontSize="14" Margin="0 5 0 0"/>
            <TextBlock Text="Ведите логин" FontSize="14" Margin="0 20 0 0"/>
            <TextBox x:Name="TbLogin" FontSize="14" Margin="0 5 0 0"/>
            <TextBlock Text="Ведите пароль" FontSize="14" Margin="0 20 0 0"/>
            <TextBox x:Name="TbPassword1" FontSize="14" Margin="0 5 0 0"/>
            <TextBlock Text="Подтвердите пароль" FontSize="14" Margin="0 20 0 0"/>
            <PasswordBox x:Name="TbPassword2" FontSize="14" Margin="0 5 0 0"/>
            <TextBlock Text="Катигория сотрудника" FontSize="14" Margin="0 20 0 0"/>
            <ComboBox x:Name="CmbCategory"  FontSize="14" Margin="0 5 0 0"/>


        </StackPanel>
        <StackPanel Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Button x:Name="BtnLogin" Content="Добавить" FontSize="14" Margin="0 20 0 0" Click="BtnLogin_Click"/>
            <TextBlock Text="Вернутся" FontSize="10" Foreground="Blue" HorizontalAlignment="Center" Margin="0 10 0 50" MouseLeftButtonUp="TextBlock_MouseLeftButtonUp"/>
        </StackPanel>
    </Grid>
</Window>